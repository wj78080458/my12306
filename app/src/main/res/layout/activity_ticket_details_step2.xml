<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TicketDetailsStep2Activity" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvTicketDetailsStep2Before"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:text="前一天"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTicketDetailsStep2DateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-8-18 周一"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvTicketDetailsStep2StationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京-大连"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTicketDetailsStep2After"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:text="后一天"
            android:textColor="@color/white" />

    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="8dp" >

         <TextView
             android:id="@+id/tvTicketDetailsStep2TrainNo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="G108"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/tvTicketDetailsStep2DurationTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:text="07:05 - 11:55, 历时4小时50分"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textSize="12sp" />

     </LinearLayout>

     <ListView
         android:id="@+id/lvTicketDetailsStep2"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >
     </ListView>
    
</LinearLayout>
